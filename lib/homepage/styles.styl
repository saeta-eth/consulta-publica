.no-topics
  margin 90px auto
  width 70%
  color #333
  font-weight 500

.browser-page
  .create-first-topic
    margin 50px auto
    width 65%
    padding-top .8em
    padding-bottom .6em
    border-radius 3px
    text-transform none
    font-size 1em

.homepage
  .topics-copy
    max-width 555px
    text-align center
    margin 0 auto
    margin-bottom 30px

    h2
      font-size 2.3em
      font-weight 100
      color 000
      margin-bottom 18px

    p
      font-size 1em
      color #7a7a7a

  .topics-container
    display flex
    flex-wrap wrap
    justify-content center

  @import './topic-card/styles'
  @import './cover/styles'

@media only screen and (max-width: 991px)
  .no-topics,
  .create-first-topic
    width 90%

